@prefix ex:   <http://example.org/mes#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .
@prefix owl:  <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

################
# Classes
################
ex:Equipment  a owl:Class .
ex:Sensor     a owl:Class .
ex:Variable   a owl:Class .
ex:Unit       a owl:Class .
ex:Process    a owl:Class .
ex:Operation  a owl:Class .
ex:Material   a owl:Class .
ex:Product    a owl:Class .
ex:Area       a owl:Class .

# 제조 특화 클래스 추가
ex:WorkOrder      a owl:Class .
ex:QualityControl a owl:Class .
ex:Maintenance    a owl:Class .
ex:Batch          a owl:Class .
ex:Defect         a owl:Class .

################
# Object Properties
################
ex:partOf a owl:ObjectProperty , owl:TransitiveProperty , owl:AsymmetricProperty , owl:IrreflexiveProperty ;
  rdfs:domain ex:Equipment ; rdfs:range ex:Equipment .

ex:hasPart a owl:ObjectProperty ; owl:inverseOf ex:partOf .

ex:measures a owl:ObjectProperty ;
  rdfs:domain ex:Sensor ; rdfs:range ex:Variable .

ex:hasUnit a owl:ObjectProperty ;
  rdfs:domain ex:Variable ; rdfs:range ex:Unit .

ex:precedes a owl:ObjectProperty , owl:TransitiveProperty , owl:AsymmetricProperty , owl:IrreflexiveProperty ;
  rdfs:domain ex:Operation ; rdfs:range ex:Operation .

ex:consumes a owl:ObjectProperty ;
  rdfs:domain ex:Operation ; rdfs:range ex:Material .

ex:produces a owl:ObjectProperty ;
  rdfs:domain ex:Operation ; rdfs:range ex:Product .

ex:locatedIn a owl:ObjectProperty ;
  rdfs:domain ex:Equipment ; rdfs:range ex:Area .

# 제조 특화 관계 추가
ex:executedBy a owl:ObjectProperty ;
  rdfs:domain ex:WorkOrder ; rdfs:range ex:Equipment .

ex:hasQuality a owl:ObjectProperty ;
  rdfs:domain ex:Product ; rdfs:range ex:QualityControl .

ex:hasMaintenance a owl:ObjectProperty ;
  rdfs:domain ex:Equipment ; rdfs:range ex:Maintenance .

ex:belongsToBatch a owl:ObjectProperty ;
  rdfs:domain ex:Product ; rdfs:range ex:Batch .

ex:hasDefect a owl:ObjectProperty ;
  rdfs:domain ex:Product ; rdfs:range ex:Defect .

################
# Datatype Properties
################
ex:code a owl:DatatypeProperty ; rdfs:range xsd:string .
ex:specUpper a owl:DatatypeProperty ; rdfs:range xsd:double .
ex:specLower a owl:DatatypeProperty ; rdfs:range xsd:double .

# 제조 특화 데이터 속성
ex:workOrderNumber a owl:DatatypeProperty ; rdfs:range xsd:string .
ex:plannedQuantity a owl:DatatypeProperty ; rdfs:range xsd:integer .
ex:actualQuantity a owl:DatatypeProperty ; rdfs:range xsd:integer .
ex:status a owl:DatatypeProperty ; rdfs:range xsd:string .
ex:timestamp a owl:DatatypeProperty ; rdfs:range xsd:dateTime .
ex:batchNumber a owl:DatatypeProperty ; rdfs:range xsd:string .
ex:defectCode a owl:DatatypeProperty ; rdfs:range xsd:string .
ex:defectCount a owl:DatatypeProperty ; rdfs:range xsd:integer .
ex:qualityResult a owl:DatatypeProperty ; rdfs:range xsd:string .
ex:maintenanceType a owl:DatatypeProperty ; rdfs:range xsd:string .

################
# Example instances (선택)
################
ex:MainLine a ex:Equipment ; rdfs:label "Main Line" .
ex:TempSensor1 a ex:Sensor ; rdfs:label "Temp Sensor #1" .
ex:ProcVar_Temp a ex:Variable ; rdfs:label "Process Temperature" .
ex:Celsius a ex:Unit ; rdfs:label "°C" .

ex:TempSensor1 ex:measures ex:ProcVar_Temp .
ex:ProcVar_Temp ex:hasUnit ex:Celsius .
